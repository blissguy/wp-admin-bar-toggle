{
  "manifest_version": 3,
  "name": "WordPress Admin Bar Toggle",
  "short_name": "WP Admin Bar Hider",
  "version": "2.0.0",
  "description": "Hide & show the WordPress admin bar with one easy click! Modern Manifest V3 extension.",

  "action": {
    "default_icon": {
      "16": "img/icon19_0.png",
      "32": "img/icon38_0.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    },
    "default_title": "WP Admin Bar Hider"
  },

  "permissions": ["storage", "tabs", "scripting", "activeTab"],

  "host_permissions": ["*://*/*"],

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "img/icon19_0.png",
    "32": "img/icon38_0.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "minimum_chrome_version": "88"
}
