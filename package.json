{
  "name": "wp-admin-bar-toggle",
  "version": "2.0.0",
  "description": "Easily toggle the WordPress Admin Bar on and off with this Chrome Extension",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && node build.js",
    "package": "npm run build && cd dist && zip -r ../wp-admin-bar-toggle.zip . && cd ..",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chrome": "^0.0.270",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-web-extension": "^4.4.5"
  },
  "keywords": [
    "chrome-extension",
    "wordpress",
    "admin-bar",
    "manifest-v3",
    "vite",
    "typescript"
  ],
  "author": "Emmanuel Kuebu",
  "license": "MIT"
}
